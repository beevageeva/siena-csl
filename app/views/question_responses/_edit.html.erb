<h1> <%=  t('edit_question_response') %></h1>

<%= form_for(@question_response, :remote => true ) do |f| %>
  	  <% if @question_response.errors.any? %>
	    <div id="error_explanation">
		<h2><%= t :error_update, :count => @question_response.errors.count %></h2>	
	      <ul>
	      <% @question_response.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>


  <p>
   <%=  t('response') %> <br />
    <%= f.text_area :response %>
  </p>
  <p>
    <%= f.submit t('update') %>
  </p>
<% end %>

<%= link_to t(:view), @question_response %> |
<%= link_to t(:back), :controller => "questions"  , :action => "edit" , :id => @question_response.question_id   %>
