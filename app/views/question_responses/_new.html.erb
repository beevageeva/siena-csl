<h1><%=  t('new_question_response') %></h1>

<%= form_for(@question_response, :remote => true) do |f| %>
  	  <% if @question_response.errors.any? %>
	    <div id="error_explanation">
		<h2><%= t :error_save, :count => @question_response.errors.count %></h2>	
	
	      <ul>
	      <% @question_response.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>


    <%= f.hidden_field :question_id %>
  <p>
   <%=  t('response') %> <br />
    <%= f.text_area :response %>
  </p>
  <p>
    <%= f.submit t('create') %>
  </p>
<% end %>




