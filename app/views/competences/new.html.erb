<h1><%= t('new_competence')   %></h1>

<%= form_for(@competence) do |f| %>
  	  <% if @competence.errors.any? %>
	    <div id="error_explanation">
		<h2><%= t :error_save, :count => @competence.errors.count %></h2>	
	
	      <ul>
	      <% @competence.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>


  <p>
    <%= t('name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= t('description') %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit t('create') %>
  </p>
<% end %>

<%= link_to 'Back', competences_path %>
